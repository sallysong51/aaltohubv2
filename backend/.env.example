# Supabase (get from https://app.supabase.com/project/[project-id]/settings/api)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
JWT_SECRET=your_jwt_secret_here

# Telegram API (get from https://my.telegram.org)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash

# Admin credentials
ADMIN_PHONE=+your_admin_phone_here
ADMIN_USERNAME=your_admin_username_here

# Encryption (generate with: python -c "import secrets; print(secrets.token_urlsafe(32))")
ENCRYPTION_KEY=your_32_byte_encryption_key_here

# JWT Token Expiration
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60
JWT_REFRESH_TOKEN_EXPIRE_DAYS=30

# API
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,https://aaltohub.com

# Sentry
SENTRY_DSN=your_sentry_dsn_here

# Resend
RESEND_API_KEY=re_your_resend_api_key_here

# Environment
ENVIRONMENT=development
