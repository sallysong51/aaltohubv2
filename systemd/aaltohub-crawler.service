[Unit]
Description=AaltoHub v2 Message Crawler
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=ubuntu
Group=ubuntu
WorkingDirectory=/home/ubuntu/AALTOHUBv2/backend
Environment="PATH=/home/ubuntu/AALTOHUBv2/backend/venv/bin"
Environment="PYTHONUNBUFFERED=1"
ExecStart=/home/ubuntu/AALTOHUBv2/backend/venv/bin/python /home/ubuntu/AALTOHUBv2/backend/scripts/crawler_enhanced.py
Restart=always
RestartSec=10
StandardOutput=append:/var/log/aaltohub/crawler.log
StandardError=append:/var/log/aaltohub/crawler.error.log

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/home/ubuntu/AALTOHUBv2

[Install]
WantedBy=multi-user.target
